.row
  .col.s12.m8.offset-m2
    %p#notice= notice
    %h1 Listing Tasks
    %table
      %thead
        %tr
          %th Name
          %th Description
          %th Project
          %th{:colspan => "3"}
      %tbody
        - @tasks.each do |task|
          %tr{:class => "#{cycle('odd', 'even')}"}
            %td= task.name
            %td= task.description
            %td= Project.find(task.project_id).name
            %td= link_to 'Show', task
            %td= link_to 'Edit', edit_task_path(task)
            %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New Task', new_task_path
