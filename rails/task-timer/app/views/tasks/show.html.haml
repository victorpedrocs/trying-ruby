.row
  .col.s12
    %p#notice= notice
    %p
      %strong Name:
      = @task.name
    %p
      %strong Description:
      = @task.description
    %p
      %strong Project:
      = @project.name
    %h3 Comments
    - @task.comments.each do |comment|
      %p
        %strong Author:
        = comment.author
      %p
        %strong Comment:
        = comment.body
      %p
        = link_to "Delete", {:controller => 'comments', :action => "destroy", :task_id => @task.id, :id => comment.id}, :method=> :delete
    %h3 Add a Comment
    = form_for([@task, @task.comments.build]) do |f|
      %p
        = f.label :author
        %br/
        = f.text_field :author
      %p
        = f.label :body
        %br/
        = f.text_area :body
      %p
        = f.submit
    = link_to 'Edit', edit_task_path(@task)
    |
    = link_to 'Back', tasks_path
