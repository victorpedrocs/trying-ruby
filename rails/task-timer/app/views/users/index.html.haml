.row
  .col.s12.m8.offset-m2
    %p#notice= notice
    %h1 Listing Users
    %table
      %thead
        %tr
          %th Name
          %th Password
          %th Email
          %th{:colspan => "3"}
      %tbody
        - @users.each do |user|
          %tr{:class => "#{cycle('odd', 'even')}"}
            %td= user.name
            %td= user.email
            %td= link_to 'Show', user
            %td= link_to 'Edit', edit_user_path(user)
            %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
    %br/
    = link_to 'New User', new_user_path
