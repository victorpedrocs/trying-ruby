= form_for [task, timer],
    html: { id: 'timer-form'}, remote: true do |f|
  - if @timer.errors.any?
    #error_explanation
      %h2
        = pluralize(@timer.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @timer.errors.full_messages.each do |message|
          %li= message
  = f.hidden_field :start, {id: 'time-start'}
  = f.hidden_field :finish, {id: 'time-finish'}

  = button_tag type: :submit, class: " red btn-large btn-floating waves-effect waves-light", id: "timer-button" do
    %i.material-icons.right#timer-button-icon
      - if timer.start
        stop
      - else
        play_arrow
